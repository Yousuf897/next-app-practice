generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Vehicle {
  id        Int      @id @default(autoincrement())
  make      String
  model     String
  year      Int
  color     String
  vin       String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
